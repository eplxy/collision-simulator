<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="216.0" prefWidth="227.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label alignment="CENTER" prefHeight="17.0" prefWidth="279.0" text="Object Parameters">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Label text="Mass" />
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <TextField fx:id="massTxtField" prefHeight="25.0" prefWidth="85.0" />
            <Label text="kg" />
         </children>
      </HBox>
      <Label text="Position" />
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label text="x" />
            <TextField fx:id="posXTxtField" prefHeight="25.0" prefWidth="60.0" />
            <Label text="y" />
            <TextField fx:id="posYTxtField" prefHeight="25.0" prefWidth="60.0" />
         </children>
      </HBox>
      <Label text="Speed" />
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <TextField fx:id="speedTxtField" prefHeight="25.0" prefWidth="85.0" />
            <Label text="m/s" />
         </children>
      </HBox>
      <Label text="Direction" />
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <TextField fx:id="directionTxtField" prefHeight="25.0" prefWidth="85.0" />
            <Label text="degrees" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="btnEnter" mnemonicParsing="false" text="Enter" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="btnRemoveObj" mnemonicParsing="false" text="Remove object">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
